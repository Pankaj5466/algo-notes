{
  "scopeName": "source.tex",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [
        { "include": "#phone-number-pattern" },
        { "include": "#q-command" },
        { "include": "#q-content" },
        { "include": "#heading-a" },
        { "include": "#heading-b" },
        { "include": "#question-qs" },
        { "include": "#lstart-command" },
        { "include": "#i-command" },
        { "include": "#inline-code" },
        { "include": "#text-note" },
        { "include": "#markdown-heading" }
      ]
    },
    "phone-number-pattern": {
      "match": "\\b\\d{9}\\b",
      "name": "string.other.phone-number"
    },
    "text-note": {
      "match": "text-note",
      "name": "text-note"
    },
    "inline-code": {
      "match": "`.*`",
      "name": "inline-code"
    },
    "markdown-heading":{
      "match": "{text-note}\\[([^]]+)]",
      "name": "markdown-heading",
      "captures": {
        "1": { "name": "string.heading" }
      }
    },
    "q-command": {
      "begin": "\\q{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.command.begin.latex" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.command.end.latex" }
      },
      "patterns": [{ "include": "#q-content" }]
    },
    "q-content": {
      "match": "(?<=\\q{)(.*?)(?=})",
      "patterns": [{ "include": "#expression" }],
      "name": "string.other.q-content.color"
    },
    "heading-a": {
      "match": "\\\\ha\\{([^}]+)\\}",
      "captures": {
        "1": { "name": "string.heading-a" }
      }
    },
    "heading-b": {
      "match": "\\\\hb\\{([^}]+)\\}",
      "captures": {
        "1": { "name": "string.heading-b" }
      }
    },
    "question-qs": {
      "match": "\\\\qs\\{([^}]+)\\}",
      "captures": {
        "1": { "name": "string.question-qs" }
      }
    },
    "lstart-command": {
      "match": "\\\\lstart|\\\\lend",
      "name": "latex.short.list.command"
    },
    "i-command": {
      "match": "\\\\i",
      "name": "latex.short.i.command"
    },
    "test": {
      "name": "test",
      "match": "test-match"
    }
  }
}
